<?xml version="1.0" encoding="utf-8"?>
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WomenInWar.Resource.Template">
        <ControlTemplate TargetType="Button" x:Name="BackButton">
            <Border
                CornerRadius="50"
                Background="#6A6A6A">
                <StackPanel Orientation="Horizontal"
                            Margin="64 0 0 0">
                    <ContentPresenter
                        ContentTemplate="{StaticResource BackIcon}"
                        Width="49"
                        Height="31"
                        Margin="0 10 0 0"/>
                    <TextBlock
                        Margin="8 0 0 0"
                        Style="{StaticResource TitleTextStyle}"
                        Text="Назад"/>
                </StackPanel>
            </Border>
        </ControlTemplate>
</ResourceDictionary>
