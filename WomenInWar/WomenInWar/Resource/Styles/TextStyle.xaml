<?xml version="1.0" encoding="utf-8"?>
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="TitleTextStyle" TargetType="TextBlock">
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="FontSize" Value="32"/>
        <Setter Property="Foreground" Value="#F8F8F8"/>
        <Setter Property="TextAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

    <Style x:Key="CharacterNameStyle" TargetType="TextBlock" BasedOn="{StaticResource TitleTextStyle}">
        <Setter Property="FontSize" Value="56"/>
        <Setter Property="Foreground" Value="#E22021"/>
        <Setter Property="HorizontalAlignment" Value="Left"/>
    </Style>

    <Style x:Key="CharacterDateStyle" TargetType="TextBlock" BasedOn="{StaticResource TitleTextStyle}">
        <Setter Property="FontWeight" Value="Normal"/>
        <Setter Property="Foreground" Value="#6A6A6A"/>
    </Style>

    <Style x:Key="CharacterDescriptionStyle" TargetType="TextBlock" BasedOn="{StaticResource TitleTextStyle}">
        <Setter Property="FontSize" Value="24"/>
        <Setter Property="FontWeight" Value="Normal"/>
        <Setter Property="Foreground" Value="#1D1D1D"/>
    </Style>
</ResourceDictionary>
