<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="WomenInWar.View.Pages.InactivityPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WomenInWar.View.Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:helpers="using:WomenInWar.Helpers"
    mc:Ignorable="d">

    <Grid>
        <Grid.Background>
            <ImageBrush
                ImageSource="../../Resource/Images/InactivityBackground.png"/>
        </Grid.Background>
            <Button
                Template="{StaticResource TouchButton}"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"/>
            <Button
                Width="1920"
                Height="1080"
                Background="Transparent"
                Command="{x:Bind helpers:CommonCommands.NavigateCommand}"
                CommandParameter="{x:Bind helpers:PageTypes.MainMenuPage}"/>
    </Grid>
</Page>
